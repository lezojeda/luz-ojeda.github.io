---
import { getLangFromUrl } from "../i18n/utils";

interface Props {
    pubDate: Date;
}

const { pubDate } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<time datetime={pubDate?.toISOString()}>
    {
        pubDate
            .toLocaleDateString(lang, {
                month: "short",
                day: "numeric",
            })
            .toLowerCase()
    }
</time>
