---
import { MOBILE_SITE_TITLE, SITE_TITLE } from "../consts";
import HamburgerButton from "./HamburgerButton.astro";
import LanguagePicker from "./LanguagePicker.astro";
import Nav from "./Nav.astro";
import ThemeIcon from "./ThemeIcon.astro";
import { checkMonth } from "../utils/checkMonth";
---

<header>
	<div class="first-row">
		<div class="left">
			<LanguagePicker />
		</div>
		<h2 class="laptop">{SITE_TITLE}</h2>
		<h2 class="mobile">{MOBILE_SITE_TITLE}</h2>
		<div class="right">
			{!checkMonth(9) && <ThemeIcon />}
			<HamburgerButton />
		</div>
	</div>
	<Nav />
</header>

<style lang="scss">
	@import "../styles/variables.scss";

	header {
		padding: var(--space-md);
	}

	.first-row {
		display: flex;
		align-items: center;
		justify-content: space-between;

		.left,
		.right {
			flex-grow: 1;
			flex-basis: 0;
		}

		.right {
			display: flex;
			justify-content: end;
		}
	}

	.first-row h2 {
		margin: 0;
	}

	@media (max-width: $mobile) {
		header {
			background-color: var(--body);
			padding: var(--space-md) 0;
		}

		.first-row {
			padding: 0 var(--space-md);
		}

		.first-row h2 {
			justify-content: start;
		}
		.first-row div:first-child {
			display: none;
		}
	}
</style>
